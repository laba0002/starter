---
const {variant="primary", size="medium"} = Astro.props;

const buttonStyling = 
    "uppercase font-sans mt-4 w-1/3 rounded py-2 px-8 text-grey-400 transition ease-in-out hover:bg-blue-100 focus:border-gray-500"
;

const sizeClasses = {
"large": "text-2xl",
"medium": "text-xl",
"small": "text-md"
};

const variantClasses ={
    "primary": "border-4 border-blue-400 bg-blue-50  text-grey-400",
    "secondary": "border-2 border-blue-400 bg-blue-50 text-grey-400"
};

